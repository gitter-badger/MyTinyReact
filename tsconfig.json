{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es2017",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "pretty": true,
    "experimentalDecorators":true, // 实验性的装饰器
    "noImplicitAny": false
  },
  "lib": ["es2017", "dom"],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
    //"**/*.spec.ts"
  ]
}